{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/weather/(.*)", "dest": "/api/weather.js" },
    { "src": "/api/travel/(.*)", "dest": "/api/travel.js" },
    { "src": "/api/checkin/(.*)", "dest": "/api/checkin.js" },
    { "src": "/api/hotels/(.*)", "dest": "/api/hotels.js" },
    { "src": "/api/restaurants/(.*)", "dest": "/api/restaurants.js" }
  ]
}


